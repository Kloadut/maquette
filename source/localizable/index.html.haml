  .navbar-inner
    .container
      = link_to 'Yunohost.org', '#first', class: 'brand'
      %ul.nav.pull-right
        %li
          = link_to I18n.t(:discover), '#discover'
        %li
          = link_to I18n.t(:try_and_get), '#try-and-get'
