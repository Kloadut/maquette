!!! 5
%html.no-js{lang: 'en'}
  %head
    %meta{:charset => "utf-8"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    / Use title if it's in the page YAML frontmatter
    %title= data.page.title || "YUNOHOST"

    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}/

    = stylesheet_link_tag "normalize", "app"

    = javascript_include_tag  "vendor/custom.modernizr"
  %body{:class => page_classes}
    #top-bar-container.fixed
      %nav.top-bar
        .top-bar-wrapper
          %ul.title-area
            / Title Area
            %li.name
              %h1= link_to 'YUNOHOST', '/'
            / Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone
            %li.toggle-topbar.menu-icon
              %a{href: '#'}
                %span Menu

          .top-bar-section
            / Right Nav Section
            %ul.right
              %li.active= link_to 'Discover', '#'
              %li= link_to 'Documentation', '#'
              %li= link_to 'Get help', '#'
              %li= link_to 'Contribute', '#'
              %li.has-form
                %a.red.button{href: '#'} Download

    = yield

    %script
      document.write('<script src=' +
      ('__proto__' in {} ? 'javascripts/vendor/zepto' : 'javascripts/vendor/jquery') +
      '.js><\/script>')
    = javascript_include_tag 'foundation/foundation'
    = javascript_include_tag 'foundation/foundation.section'
    = javascript_include_tag 'foundation/foundation.placeholder'
    = javascript_include_tag 'foundation/foundation.forms'
    = javascript_include_tag 'foundation/foundation.dropdown'
    = javascript_include_tag 'foundation/foundation.alerts'
    = javascript_include_tag 'foundation/foundation.cookie'
    = javascript_include_tag 'foundation/foundation.tooltips'
    = javascript_include_tag 'foundation/foundation.reveal'
    = javascript_include_tag 'foundation/foundation.magellan'
    = javascript_include_tag 'foundation/foundation.orbit'
    = javascript_include_tag 'foundation/foundation.joyride'
    = javascript_include_tag 'foundation/foundation.topbar'
    = javascript_include_tag 'foundation/foundation.clearing'
    = javascript_include_tag 'all'
    %script
      $(document).foundation();
